{
  "name": "starter",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ]
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check": "ultracite check && bun run syncpack:check && bun run check-types",
    "fix": "ultracite fix && bun run syncpack:fix",
    "check-types": "turbo type-check",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @starter/db db:push",
    "db:studio": "turbo -F @starter/db db:studio",
    "syncpack:check": "syncpack list-mismatches",
    "syncpack:fix": "syncpack fix-mismatches",
    "syncpack:lint": "syncpack lint",
    "update:all": "syncpack update --target latest --dependencies '!react' --dependencies '!react-dom' --dependencies '!@types/react' && syncpack fix-mismatches",
    "cl-install": "find . -name 'node_modules' -type d -prune -exec rm -rf {} + && find . -name 'bun.lock' -type f -delete && bun install",
    "prepare": "husky",
    "auth:generate-schema": "bunx @better-auth/cli generate --config packages/auth/src/index.ts --output packages/db/src/schema/auth.ts -y"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.12",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "shadcn": "^3.7.0",
    "syncpack": "^13.0.4",
    "turbo": "^2.7.6",
    "ultracite": "^7.0.12"
  },
  "packageManager": "bun@1.3.6"
}
