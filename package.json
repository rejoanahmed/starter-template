{
  "name": "spotfinder",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ]
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check": "ultracite check",
    "fix": "ultracite fix",
    "check-types": "turbo type-check",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
