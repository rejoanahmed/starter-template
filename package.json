    "db:studio": "turbo -F @starter/db db:studio",
    "db:generate": "turbo -F @starter/db db:generate",
    "db:migrate": "turbo -F @starter/db db:migrate"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/bun": "^1.2.6",
    "turbo": "^2.7.1",
    "ultracite": "6.3.10"
  },
  "overrides": {
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native-safe-area-context": "5.6.1"
