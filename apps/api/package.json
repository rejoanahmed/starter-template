{
  "name": "api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "types": "./dist/export-types.d.mts",
  "exports": {
    ".": {
      "types": "./dist/export-types.d.mts",
      "import": "./dist/export-types.mjs",
      "default": "./dist/export-types.mjs"
    }
  },
  "scripts": {
    "dev": "concurrently \"tsdown --watch\" \"bunx wrangler dev --port 3001 --ip 0.0.0.0\"",
    "test": "vitest run",
    "build": "tsdown",
    "deploy": "bunx wrangler deploy --minify",
    "type-check": "tsc -b",
    "cf-typegen": "bunx wrangler types --env-interface CloudflareBindings",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:prod": "NODE_ENV=production tsx src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "stripe:listen": "stripe listen --forward-to localhost:3001/api/stripe/webhook",
    "stripe:trigger:account-updated": "stripe trigger account.updated"
  },
  "dependencies": {
    "@hono/zod-openapi": "^1.2.0",
    "@hono/zod-validator": "^0.7.6",
    "@scalar/hono-api-reference": "^0.9.38",
    "@starter/auth": "workspace:*",
    "@starter/db": "workspace:*",
    "better-auth": "^1.4.18",
    "dotenv": "^17.2.3",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.11.7",
    "nanoid": "^5.1.6",
    "stripe": "^20.3.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "tsdown": "^0.20.1",
    "vitest": "^4.0.18",
    "@cloudflare/workers-types": "^4.20260129.0",
    "@types/node": "^25.1.0",
    "@types/pg": "^8.16.0",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "wrangler": "^4.61.0"
  }
}
